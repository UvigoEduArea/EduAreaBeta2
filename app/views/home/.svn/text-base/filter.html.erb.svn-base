				<li><%= check_box_tag 'curricular_setting[educational_level][]', 'Universidade', ((params[:curricular_setting].present? && params[:curricular_setting]["educational_level"].present?) ? params[:curricular_setting]["educational_level"] : []).include?('Universidade') %><%= label_tag t('university') %></li>
				<li><%= check_box_tag 'curricular_setting[educational_level][]', 'Outro', ((params[:curricular_setting].present? && params[:curricular_setting]["educational_level"].present?) ? params[:curricular_setting]["educational_level"] : []).include?('Outro') %><%= label_tag t('other') %></li>	
			</ul>
			
			<ul><%= t("By_course")%>		
				<li><%= check_box_tag 'curricular_setting[grade][]', 'Primeiro', ((params[:curricular_setting].present? && params[:curricular_setting]["grade"].present?) ? params[:curricular_setting]["grade"] : []).include?('Primeiro') %><%= label_tag t('first') %></li>
				<li><%= check_box_tag 'curricular_setting[grade][]', 'Segundo', ((params[:curricular_setting].present? && params[:curricular_setting]["grade"].present?) ? params[:curricular_setting]["grade"] : []).include?('Segundo') %><%= label_tag t('second') %></li>
				<li><%= check_box_tag 'curricular_setting[grade][]', 'Terceiro', ((params[:curricular_setting].present? && params[:curricular_setting]["grade"].present?) ? params[:curricular_setting]["grade"] : []).include?('Terceiro') %><%= label_tag t('third') %></li>
				<li><%= check_box_tag 'curricular_setting[grade][]', 'Cuarto', ((params[:curricular_setting].present? && params[:curricular_setting]["grade"].present?) ? params[:curricular_setting]["grade"] : []).include?('Cuarto') %><%= label_tag t('fourth') %></li>
				<li><%= check_box_tag 'curricular_setting[grade][]', 'Quinto', ((params[:curricular_setting].present? && params[:curricular_setting]["grade"].present?) ? params[:curricular_setting]["grade"] : []).include?('Quinto') %><%= label_tag t('fifth') %></li>
				<li><%= check_box_tag 'curricular_setting[grade][]', 'Sexto', ((params[:curricular_setting].present? && params[:curricular_setting]["grade"].present?) ? params[:curricular_setting]["grade"] : []).include?('Sexto') %><%= label_tag t('sixth') %></li>
			</ul>
			
			<ul><%= t("By_subject")%>		
				<li><%= check_box_tag 'curricular_setting[knowledge_area][]', 'Matemáticas', ((params[:curricular_setting].present? && params[:curricular_setting]["knowledge_area"].present?) ? params[:curricular_setting]["knowledge_area"] : []).include?('Matemáticas') %><%= label_tag t('PC_matematicas') %></li>
				<li><%= check_box_tag 'curricular_setting[knowledge_area][]', 'Ciencias da natureza', ((params[:curricular_setting].present? && params[:curricular_setting]["knowledge_area"].present?) ? params[:curricular_setting]["knowledge_area"] : []).include?('Ciencias da natureza') %><%= label_tag t('PC_naturaleza') %></li>
				<li><%= check_box_tag 'curricular_setting[knowledge_area][]', 'Ciencias sociais', ((params[:curricular_setting].present? && params[:curricular_setting]["knowledge_area"].present?) ? params[:curricular_setting]["knowledge_area"] : []).include?('Ciencias sociais') %><%= label_tag t('PC_sociales') %></li>
				<li><%= check_box_tag 'curricular_setting[knowledge_area][]', 'Lingua Castelá e literatura', ((params[:curricular_setting].present? && params[:curricular_setting]["knowledge_area"].present?) ? params[:curricular_setting]["knowledge_area"] : []).include?('Lingua Castelá e literatura') %><%= label_tag t('PC_castellano') %></li>
				<li><%= check_box_tag 'curricular_setting[knowledge_area][]', 'Lingua Galega e literatura', ((params[:curricular_setting].present? && params[:curricular_setting]["knowledge_area"].present?) ? params[:curricular_setting]["knowledge_area"] : []).include?('Lingua Galega e literatura') %><%= label_tag t('PC_gallego') %></li>
				<li><%= check_box_tag 'curricular_setting[knowledge_area][]', '1ª Lingua estranxeira', ((params[:curricular_setting].present? && params[:curricular_setting]["knowledge_area"].present?) ? params[:curricular_setting]["knowledge_area"] : []).include?('1ª Lingua estranxeira') %><%= label_tag t('PC_extranjera') %></li>
				<li><%= check_box_tag 'curricular_setting[knowledge_area][]', 'Educación artística', ((params[:curricular_setting].present? && params[:curricular_setting]["knowledge_area"].present?) ? params[:curricular_setting]["knowledge_area"] : []).include?('Educación artística') %><%= label_tag t('PC_artistica') %></li>
				<li><%= check_box_tag 'curricular_setting[knowledge_area][]', 'Educación física', ((params[:curricular_setting].present? && params[:curricular_setting]["knowledge_area"].present?) ? params[:curricular_setting]["knowledge_area"] : []).include?('Educación física') %><%= label_tag t('PC_fisica') %></li>
				<li><%= check_box_tag 'curricular_setting[knowledge_area][]', 'Valores sociais e cívicos', ((params[:curricular_setting].present? && params[:curricular_setting]["knowledge_area"].present?) ? params[:curricular_setting]["knowledge_area"] : []).include?('Valores sociais e cívicos') %><%= label_tag t('PC_civicos') %></li>
			</ul>
		</br>
		
		<h><%= t("Profile_technical")%></h>
			<ul><%= t("By_OS")%>		
				<li><%= check_box_tag 'technical_setting[SO][]', 'Windows', ((params[:technical_setting].present? && params[:technical_setting]["SO"].present?) ? params[:technical_setting]["SO"] : []).include?('Windows') %><%= label_tag 'Windows' %></li>
				<li><%= check_box_tag 'technical_setting[SO][]', 'Linux', ((params[:technical_setting].present? && params[:technical_setting]["SO"].present?) ? params[:technical_setting]["SO"] : []).include?('Linux') %><%= label_tag 'Linux' %></li>
				<li><%= check_box_tag 'technical_setting[SO][]', 'Mac iOS', ((params[:technical_setting].present? && params[:technical_setting]["SO"].present?) ? params[:technical_setting]["SO"] : []).include?('Mac iOS') %><%= label_tag 'Mac iOS' %></li>
				<li><%= check_box_tag 'technical_setting[SO][]', 'Outro', ((params[:technical_setting].present? && params[:technical_setting]["SO"].present?) ? params[:technical_setting]["SO"] : []).include?('Outro') %><%= label_tag t('other') %></li>
			</ul>
			
			<ul><%= t("By_LMS")%>		
				<li><%= check_box_tag 'technical_setting[LMS][]', 'Moodle', ((params[:technical_setting].present? && params[:technical_setting]["LMS"].present?) ? params[:technical_setting]["LMS"] : []).include?('Moodle') %><%= label_tag 'Moodle' %></li>
				<li><%= check_box_tag 'technical_setting[LMS][]', 'Claroline', ((params[:technical_setting].present? && params[:technical_setting]["LMS"].present?) ? params[:technical_setting]["LMS"] : []).include?('Claroline') %><%= label_tag 'Claroline' %></li>
