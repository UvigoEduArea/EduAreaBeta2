				<li><%= check_box_tag 'technical_setting[LMS][]', 'dotLRN', ((params[:technical_setting].present? && params[:technical_setting]["LMS"].present?) ? params[:technical_setting]["LMS"] : []).include?('dotLRN') %><%= label_tag 'dotLRN' %></li>
				<li><%= check_box_tag 'technical_setting[LMS][]', 'Outro', ((params[:technical_setting].present? && params[:technical_setting]["LMS"].present?) ? params[:technical_setting]["LMS"] : []).include?('Outro') %><%= label_tag t('other') %></li>
			</ul>
			
			<ul><%= t("By_connection")%>		
				<li><%= check_box_tag 'technical_setting[Internet][]', 'ADSL', ((params[:technical_setting].present? && params[:technical_setting]["Internet"].present?) ? params[:technical_setting]["Internet"] : []).include?('ADSL') %><%= label_tag 'ADSL' %></li>
				<li><%= check_box_tag 'technical_setting[Internet][]', 'Wifi', ((params[:technical_setting].present? && params[:technical_setting]["Internet"].present?) ? params[:technical_setting]["Internet"] : []).include?('Wifi') %><%= label_tag 'Wifi' %></li>
				<li><%= check_box_tag 'technical_setting[Internet][]', 'Outro', ((params[:technical_setting].present? && params[:technical_setting]["Internet"].present?) ? params[:technical_setting]["Internet"] : []).include?('Outro') %><%= label_tag t('other') %></li>
			</ul>
		</br>
		
		
		<h><%= t("keywords")%></h>
			<ul><%= t("By keyword")%>
				<%= text_field_tag :search_keyword, params[:search_keyword], placeholder: t('Enter_keyword') %>
			</ul>
		</br>
		
		<%= submit_tag("Búsqueda avanzada")%>	
	
	<%end %>
</div>	
