/********************************/
/*             ABOUT            */
/********************************/
#left_bar_dropdown:hover ul#ddabout{
	display:block;
}
#left_bar_dropdown:hover ul#ddabout li{
	padding:5px 10px;
}

ul#ddabout{
	display:none;
	margin-top:-3px;
	font-size:1.063em;
	color:white;
	font-family:ralewaysemibold;
	font-variant: small-caps;
	background: -webkit-gradient(linear,left bottom,left top,color-stop(0.37, rgb(31,58,77)),color-stop(0.76, rgb(53,81,102)),color-stop(1, rgb(76,104,126)));
	background: -moz-linear-gradient(bottom, rgb(31,58,77) 37%,rgb(53,81,102) 76%,rgb(76,104,126) 100%);
}
#left_bar_dropdown ul#ddabout{
	width:230px;
	text-align:left;	
}
#left_bar_dropdown ul#ddabout li.singlefirstlevel:hover{
	background-color:#32C3D6;
}
#left_bar_dropdown ul#ddabout li ul li:hover{
	background-color:#32C3D6;
}

#left_bar_dropdown ul#ddabout li ul{
}
#left_bar_dropdown ul#ddabout li:hover ul{
	display:block;	
}
#left_bar_dropdown ul#ddabout li,
#left_bar_dropdown ul#ddabout li a,
#left_bar_dropdown ul#ddabout li ul li a{
	color:white;
}
