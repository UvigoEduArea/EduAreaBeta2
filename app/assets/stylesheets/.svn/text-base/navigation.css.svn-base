}

#nav_bar #header_profile #user_menu
{
	font-size:1em;
	color:white;
	font-family:ralewaymedium;
	font-variant: small-caps;
}
@media only screen and (min-width: 48.036em) 
{

	#nav_bar #header_profile #user_menu
	{
		/*font-size:0.8em;*/
	}
	#nav_bar #header_profile #user_menu ul li{
		padding:12px 0px;		
	}
	#nav_bar #header_profile #user_menu ul li.guestuser
	{
		padding:8px 0px;
	}
	
}
#nav_bar #header_profile #user_menu .icon-plus
{
	color:#32C3D6;
}
#nav_bar #header_profile #user_menu ul li:hover .icon-plus
{
	color:gray;
}

