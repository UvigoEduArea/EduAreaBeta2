	{
	margin-right:1%;
	}
}
@media only screen and (min-width: 90.000em) /* >= 1440px */
{
	div.paradata_icon img{
		width:32px;
	}
	div.user_info.paradata_icon
	{
		display:none !important;	
	}
	div.paradata_information div#paradata_actions div.paradata_icon
	{
	margin-right:4%;
	}
}
@media only screen and (min-width: 105.000em) /* >= 1680px */
{
	div.paradata_icon img{
		width:32px;
	}
	div.user_info.paradata_icon
	{
		display:none !important;	
	}
	div.paradata_information div#paradata_actions div.paradata_icon
	{
	margin-right:5%;
	}
}
@media only screen and (min-width: 120.000em) /* >= 1920px */
{
	div.paradata_icon img{
		width:32px;
	}
	div.user_info.paradata_icon
	{
		display:none !important;	
	}
}

