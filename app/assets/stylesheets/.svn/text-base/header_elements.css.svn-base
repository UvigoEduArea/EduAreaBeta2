	margin-left: 5px;
}
.keywords{
	position: relative;
	padding-top: 1%;
	height: 80px;
}

.title input, .url input, .snippet_url input{
	border:none;
	background-color: transparent;
}

.title input{
	font-weight: bold;
	font-size: 30px;
	width: 100%;
}

.image_updateable{
	width: 45%;
	position:relative;
}

.change_file_input{
	position: absolute;
	text-align: center;
	cursor: default;
	color: buttontext;
	border: 2px outset buttonface;
	border-image-source: initial;
	border-image-slice: initial;
	border-image-width: initial;
	border-image-outset: initial;
	border-image-repeat: initial;
	background-color: buttonface;
	box-sizing: border-box;
	font: -webkit-small-control;
	-webkit-writing-mode: horizontal-tb;
	-webkit-appearance: button;
}

/********************/
/*** Keywords CSS ***/
/********************/

.keyword_input{
	position: relative;
	border: none;
	width: 25%;
	background-color: transparent;
}

.keyword_input_container{
	position: relative;
	top: 8%;
}

.keywords_container{
	position: relative;
	/*top: 20%;
	height: 40px;*/
}

.keyword_box{
	position: relative;
	background-color: rgba(110,210,255,0.5);
	display: inline-block;
	min-width: 1%;
	padding: 5px 5px 5px 5px;
	cursor: default;
	margin-right: 15px;
	margin-top: 5px;
}

.keyword_box::after{
	content: "";
	border:13px solid transparent;
	position: absolute;
	border-left-color: #e2ecf5;
	left: 100%;
	top: 0px;
}

.delete_keyword{
	position: absolute;
	width: 14px;
	top: -7px;
	left: -5px;
	cursor: pointer;
}
