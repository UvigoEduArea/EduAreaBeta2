.record_card{
	background-color: #F1F4FD;
	min-width: 238px;
	max-width:330px;
	margin-left:20px;
	margin-top:20px;
	float:left;
	/*padding:5px;*/
	text-align:justify;
	
}
.record_card .title_container,
.record_card .title_container a{
    font-family: 'ralewayregular';
    font-size: 1.5em !important;
    padding:5px;
    color:black;
}
.record_card .description_container,
.record_card .description_container a{
    font-family: 'ralewaylight';
    font-size: 0.875em !important;
    padding:5px;
    color:black;
    line-height:125%;
}
.record_card .keywords_container,
.record_card .keywords_container a{
    font-family: 'ralewaymedium';
    font-size: 0.813em !important;
    padding:5px;
    color:black;
}
.record_card .keywords_container .keyword_box{
	background-color:#e2ecf5;
	font-family: 'ralewayregular';
    font-size: 0.875em !important;
}
.record_card .license_image_container{
	
	height:15px;
}
.record_card div.license_image_container img
{
	float:right;	
}
.record_card div.image_container img
{
	margin-bottom:-3px;
	width:100%;
}
.record_card .bottom_bar{
	height: 45px;
}
.record_card .bottom_bar a {
	height: 30px;
	width: 55%;
	margin-left: 3px;
	margin-top: 7.5px;
	overflow:hidden;
}

.record_card .bottom_bar img{
	vertical-align: top;
	
}
@media only screen and (min-width: 60.000em) /* >= 960px */
{
	.record_card{
		min-width:318px;
		max-width:400px;
	}
}
@media only screen and (min-width: 64.000em) /* >= 1024px */
{
	.record_card{
		min-width:350px;
		max-width:430px;
	}
}
@media only screen and (min-width: 80.000em) /* >= 1280px */
{
	.record_card{
		min-width:478px;
		max-width:550px;
	}
}
@media only screen and (min-width: 90.000em) /* >= 1440px */
{
	.record_card{
		min-width:365px;
		max-width:420px;
	}
}
@media only screen and (min-width: 105.000em) /* >= 1680px */
{
	.record_card{
		min-width:419px;
		max-width:485px;
	}
}
@media only screen and (min-width: 120.000em) /* >= 1920px */
{
	.record_card{
		min-width:320px;
		max-width:400px;
	}
}
/*************************************************************************/
/* CSS para los iconos comentarios, compartir y social de la record_card */
/*************************************************************************/
.comment_icon{
	background-image: url("/images/icons/slicedsprites/comment_0.png");
	background-repeat:no-repeat;
	
}

.share_icon{
	background-image: url("/images/icons/slicedsprites/share_0.png");
	background-repeat:no-repeat;
}

.social_icon{
	background-image: url("/images/icons/slicedsprites/social_0.png");
	background-repeat:no-repeat;
	width: 40px !important;
}

.view_icon{
	background-image: url("/images/icons/slicedsprites/view_0.png");
	background-repeat:no-repeat;
}

.quality_icon{
	background-image: url("/images/icons/slicedsprites/quality_0.png");
	background-repeat:no-repeat;
	width: 60px !important;
}

.copy_icon{
	background-image: url("/images/icons/slicedsprites/copy_0.png");
	background-repeat:no-repeat;
}

.record_card .record_card_icons{
	float: right;
	padding-top: 2px;
	padding-bottom: 2px;
}

.record_card .bottom_bar span.icon{
	height: 30px;
	width: 30px;
	margin-top: 7.5px;
	margin-right: 20px;
	cursor: pointer;
}
