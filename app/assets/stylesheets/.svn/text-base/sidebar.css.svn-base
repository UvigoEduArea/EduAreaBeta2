/***************************/
/* BARRA LATERAL IZQUIERDA */
/***************************/
#section_header{
	/*min-height: 200px;*/
	float:left;
	width: 64px;
	background-color: white;
	color:black;
	z-index: 1;
	height: 100%;
	position: fixed;
}

/********************************/
/* PRIMERA BARRA LATERAL IZQUDA */
/********************************/
div#actions a.action_icon_container
{
	margin-bottom:15px;
}
div#actions a.action_icon_container.show_hide_text
{
	margin-bottom:23px;
}

.action_icon_container
{
	padding: 3px 0px;
	display:block;
}
.action_icon_container.invisible
{
	
	display:none;
}

.action_icon_container, .action_icon_container span{
	cursor: pointer;
	/*margin-top: 70px;*/
	position: relative;
	/*margin-left: 4px;*/
	
	text-align:left;
	color:black;
}
.action_icon_container a
{
	padding:20px 15px 0px;
}
.action_icon_container img
{
	/*padding:1px 1px 1px;*/
	width:32px;
	vertical-align:middle;
}
.action_icon_container span{
	font-size: 0.8em;
}

.action_icon_container button{
	cursor: pointer;
	background-color: transparent;
}
.action_icon_container button span{
	margin-left:0px;
}


.action_icon_container.show_hide_text{
	/*width: 90%;*/
	margin: 0px 0px 23px;
	text-align: left;
}

