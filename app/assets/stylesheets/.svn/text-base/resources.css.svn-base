/*****************************************************************************
****************CSS PARA LA SECCIÓN RECURSOS DE LOS FORM**********************
*****************************************************************************/

.content_show.resources{
	padding: 1%;
}

.resources_title{
	color: white;
	font-size: 20px;
	top: 25px;
	margin-right: 10px;
	position: relative;
}


.resources_mini_view{
	padding: 1% 2%;
}

.resources_action_bar{
	position: relative;
}

ul.dropdown.new_resources{
	position: relative;
	list-style: none;
	width: 150px;
	text-align: center;
	left: 0%;
	top: 23px;
	border-radius: 0px 0px 10px 10px;
	background: #1887E3;
	z-index: 1;
}

ul.dropdown.new_resources li, ul.dropdown.resources_where li{
	height: 25px;
	cursor: pointer;
	color: white;
}

.resource_container{
	border: 1px solid black;
	margin: 0% 5% 1% 5%;
	background-color: white;
}

form.edit_resource{
	padding: 0.1% 1% 1% 1%;
	height: auto;
}

form.edit_resource .title{
	margin-top: 1%;
}

